<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#abcdef"
        tools:context="uk.ac.bournemouth.ap.dotsandboxes.PlayGameActivity">

    <uk.ac.bournemouth.ap.dotsandboxes.GameView
            android:id="@+id/custView"
            android:layout_width="393dp"
            android:layout_height="534dp"
            android:layout_margin="5dp"
            android:background="#4CAF50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.168" />

    <Button
            android:id="@+id/buttonRestart"
            android:layout_width="114dp"
            android:layout_height="49dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="Restart"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonSettings" />

    <Button
            android:id="@+id/buttonSettings"
            android:layout_width="124dp"
            android:layout_height="49dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:text="Settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custView" />

</androidx.constraintlayout.widget.ConstraintLayout>